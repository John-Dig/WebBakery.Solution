@* Vendor Page *@
@{
  Layout = "_Layout";
}
@using Bakery.Models;

<h1>Vendors</h1>
<h3>List of Vendors</h3>

@if (@Model.Count == 0)
{
  <p>No vendors have been added</p>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendor/@vendor.Id'>@vendor.Name</a></h3>
}

<h3><a href='/categories/new'>Add a new Vendor</a></h3>
