@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h3>Here are all the orders for this vendor</h3>
@if (@Model["orders"].Count == 0)
{
  <p>No orders have been added</p>
}

  @foreach (Order order in @Model["orders"])  
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  }

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Create New Order</a></p>
<p><a href='/vendors'>Return to vendors list</a></p>
<p><a href='/'>Return to Main Page</a></p>

@* FOR REFERENCE
@if (@Model.Count == 0)
{
  <p>No vendors have been added</p>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
} *@
